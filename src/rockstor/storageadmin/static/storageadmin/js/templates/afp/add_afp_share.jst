<% if (afpShareId!=null) { %>
<h3>Edit afp export</h3>
<%} else {%>
<h3>Add afp export</h3>
<%}%>
<div class="row">
  <div class="col-md-8">
    <label class="control-label"></label>
    <div class="form-box">
      <form id="add-afp-share-form" name="aform" class="form-horizontal">
        <div class="messages"></div>

        <!-- Shares -->
        <div class="control-group">
          <label class="control-label" for="shares">Shares to export via afp<span class="required">*</span></label>
          <div class="controls">
            <select name="shares" id="shares" size="10" class='required' multiple data-placeholder="Select shares" >
            <% if (afpShareId!=null) {  %>
            <option value="<%= afpShare.get('share')%>" selected="selected"> <%= afpShare.get('share') %></option>
            <% } %>
              <% _.each(shares, function(share, index) { %>
                <option value="<%= share.get('name') %>"><%= share.get('name') %></option>
              <% }); %>
            </select>
          </div>
        </div>

        <!-- Time Machine -->

        <div class="control-group">
          <label class="control-label" for="time_machine">Time Machine<span class="required"> *</span></label>
          <div class="controls">
              <% _.each(time_machine_choices, function(c) { %>
                <label class="radio inline">
                <% if (afpShareId!=null){ %>
                    <% if(c.value == afpShare.get("time_machine")){ %>
                        <input type="radio" name="time_machine" value="<%= c.value %>" title="Enable Time Machine support for this Share to backup Macs." checked> <%= c.name %>
                    <% }else{ %>
                        <input type="radio" name="time_machine" value="<%= c.value %>" title="Don't enable Time Machine support for this Share." > <%= c.name %>
                    <% } %>
                 <% }else { %>
                   <% if(c.value == 'yes'){ %>
                      <input type="radio" name="time_machine" value="<%= c.value %>" title="Enable Time Machine support for this Share to backup Macs" checked> <%= c.name %>
                   <%  }else{ %>
                      <input type="radio" name="time_machine" value="<%= c.value %>" title="Don't enable Time Machine support for this Share." > <%= c.name %>
                <%  } %>
                 <%  } %>
                </label>
              <% }); %>
          </div>
        </div>

        <!-- Submit -->
        <div class="control-group">
          <div class="controls">
            <a id="cancel" class="btn btn-default">Cancel</a>
            <input type="Submit" id="create-afp-share" class="btn btn-primary" value="Submit"></input>
          </div>
        </div>

      </form>
    </div>
  </div> <!--col-md-8 -->
</div>  <!-- row -->
